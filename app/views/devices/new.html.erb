<h2 class="text-2xl font-bold mb-4">Enroll New Device for <%= @enterprise.name %></h2>

<%= form_with model: [@enterprise, @device], local: true, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :device_id, "Device ID", class: "block mb-1" %>
    <%= f.text_field :device_id, class: "bg-gray-800 border border-gray-700 rounded p-2 w-full" %>
  </div>

  <div>
    <%= f.label :platform, "Platform", class: "block mb-1" %>
    <%= f.select :platform, [["Android", "android"], ["Apple", "apple"]], {}, class: "bg-gray-800 border border-gray-700 rounded p-2 w-full" %>
  </div>

  <div>
    <%= f.label :enrolled, "Enrolled?", class: "block mb-1" %>
    <%= f.check_box :enrolled %>
  </div>

  <div>
    <%= f.label :metadata, "Metadata (JSON)", class: "block mb-1" %>
    <%= f.text_area :metadata, rows: 5, class: "bg-gray-800 border border-gray-700 rounded p-2 w-full" %>
  </div>

  <%= f.submit "Enroll Device", class: "bg-blue-600 px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>

<%= link_to "← Back to Devices", enterprise_devices_path(@enterprise), class: "text-blue-400 mt-4 block" %>
