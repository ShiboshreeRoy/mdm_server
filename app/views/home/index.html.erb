<div class="relative flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-blue-600 via-indigo-700 to-purple-800 text-white text-center overflow-hidden">
  <!-- Optional Overlay -->
  <div class="absolute inset-0 bg-black bg-opacity-40"></div>

  <!-- Main Content -->
  <div class="relative z-10 max-w-3xl px-6">
    <!-- App Name -->
    <h1 class="text-5xl md:text-6xl font-extrabold mb-4">
      Welcome to <span class="text-yellow-400">MDM</span>
    </h1>
    <p class="text-lg md:text-xl text-gray-200 mb-10">
      A modern Ruby on Rails platform with powerful admin and client features.
    </p>

    <!-- Conditional Buttons -->
    <% if user_signed_in? && current_user.admin? %>
      <h4 class="text-2xl mb-6">ðŸ‘‘ Welcome Admin, <%= current_user.email %></h4>
      <div class="flex flex-wrap justify-center gap-4">
        <%= link_to "Go to Admin Dashboard", admin_dashboard_path,
          class: "bg-white text-gray-900 font-semibold py-3 px-6 rounded-full shadow-lg hover:scale-105 transform transition" %>
        <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete},
          class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-full shadow-lg hover:scale-105 transform transition" %>
      </div>

    <% elsif user_signed_in? %>
      <h4 class="text-2xl mb-6">ðŸ‘‹ Hello, <%= current_user.email %></h4>
      <div class="flex flex-wrap justify-center gap-4">
        <%= link_to "Go to Profile",client_dashboard_path,
          class: "bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-full shadow-lg hover:scale-105 transform transition" %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete,
          class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-full shadow-lg hover:scale-105 transform transition" %>
      </div>

    <% else %>
      <div class="flex flex-wrap justify-center gap-4">
        <%= link_to "Client Login", new_user_session_path,
          class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-full shadow-lg hover:scale-105 transform transition" %>
        <%= link_to "Client Sign Up", new_user_registration_path,
          class: "bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-full shadow-lg hover:scale-105 transform transition" %>
        <%= link_to "Admin Login", new_user_session_path,
          class: "bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-semibold py-3 px-6 rounded-full shadow-lg hover:scale-105 transform transition" %>
      </div>
    <% end %>
  </div>
</div>
